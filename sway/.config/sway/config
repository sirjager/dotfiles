exec_always --no-startup-id pgrep -x Telegram >/dev/null || Telegram >/dev/null 2>&1 &
exec_always --no-startup-id pgrep -f gnome-keyring-daemon >/dev/null || /usr/bin/gnome-keyring-daemon --start --components=secrets 



