{
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>",
    "rotate": 90
  },
  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": "⼀",
      "2": "⼆",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "⼋",
      "9": "⼏",
      "10": "⼗"
    }
  },
  "sway/window": {
    "format": "{title}",
    "max-length": 50,
    "rotate": 90,
    "all-outputs": true,
    "offscreen-css": true,
    "offscreen-css-text": "(inactive)",
    "rewrite": {
      "(.*) - Mozilla Firefox": " $1",
      "(.*) - fish": "> [$1]"
    }
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": " ",
      "deactivated": " "
    }
  },
  "tray": {
    "icon-size": 14,
    "spacing": 5
  },
  "clock#hour": {
    "format": "{:%I}",
    "interval": 1,
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-middle": "mode",
      "on-click": "shift_down",
      "on-click-right": "shift_up",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "clock#min": {
    "format": "{:%M}",
    "interval": 1,
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "format": {
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click": "shift_down",
      "on-click-left": "shift_down",
      "on-click-right": "shift_up",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "cpu": {
    "format": "  {usage: >3}%",
    "on-click": "alacritty -e htop"
  },
  "memory": {
    "format": "  {: >3}%",
    "on-click": "alacritty -e htop"
  },
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
    "critical-threshold": 80,
    "format-critical": "{temperatureC}°C ",
    "format": "  {temperatureC}°C"
  },
  "backlight": {
    "format": "{icon} {percent: >3}",
    "format-icons": ["", "", "", "", "", ""],
    "tooltip-format": " Brightness {percent}%",
    "on-scroll-up": "brightness up",
    "on-scroll-down": "brightness down",
    "on-click-right": "~/.config/rofi/applets/bin/brightness.sh"
  },
  "battery": {
    "states": {
      "good": 90,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity: >3}",
    "format-charging": " {capacity: >3}",
    "format-icons": ["", "", "", "", "", "", "", "", "", ""],
    "tooltip-format": "  Battery {capacity}%  Capacity {health}% "
  },
  "network": {
    "format": "⚠ Disabled",
    "format-wifi": " ",
    "format-ethernet": "  Wired",
    "format-disconnected": "⚠  Disconnected",
    "max-length": 50,
    "tooltip-format": "{ifname} via {gwaddr} 󰊗",
    "tooltip-format-wifi": "  {essid} {signalStrength}% ",
    "tooltip-format-ethernet": "{ifname} ",
    "tooltip-format-disconnected": "Disconnected",
    "on-click": "nm-connection-editor"
  },
  "pulseaudio": {
    "scroll-step": 1,
    "format": "{icon} {volume: >3}",
    "format-bluetooth": "{icon} {volume: >3}",
    "format-muted": " muted",
    "format-icons": {
      "headphones": "",
      "handsfree": "",
      "headset": "",
      "default": ["", ""]
    },
    "on-click-left": "pavucontrol",
    "on-scroll-up": "volume up",
    "on-scroll-down": "volume down",
    "on-click-right": "~/.config/rofi/applets/bin/volume.sh"
  },
  "bluetooth": {
    "format": " {status}",
    "format-connected": "",
    "format-connected-battery": "{device_battery_percentage}",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click-left": "blueman-manager"
  },
  "custom/pacman": {
    "format": "  {}",
    "interval": 7200,
    "exec": "i=$(checkupdates); echo \"$i\" |wc -l; echo \"$i\" |column -t |tr '\n' '\r'",
    "exec-if": "exit 0",
    "on-click": "alacritty -e sudo pacman -Syu",
    "signal": 8
  },
  "custom/notification": {
    "format": "",
    "on-click": "swaync-client -t -sw"
  },
  "custom/uptime": {
    "format": "  {}",
    "exec": "uptimex",
    "interval": 120
  },
  "custom/nightlight": {
    "format": "",
    "on-click-left": "sunset on",
    "on-click-right": "sunset off",
    "on-click-middle": "sunset reset",
    "on-scroll-up": "sunset up",
    "on-scroll-down": "sunset down"
  },
  "custom/wallpaper": {
    "format": "",
    "on-click": "setwal -p $mystorage/wallpaper"
  },
  "custom/power": {
    "format": "  ",
    "on-click": "~/.config/rofi/applets/bin/powermenu.sh"
  },
  "custom/quit": {
    "format": "󰗼",
    "on-click": "hyprctl dispatch exit"
  },
  "custom/lock": {
    "format": "󰍁",
    "on-click": "swaylock"
  },
  "custom/reboot": {
    "format": "󰜉",
    "on-click": "reboot"
  },
  "group/group-power": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-power",
      "transition-left-to-right": false
    },
    "modules": ["custom/power", "custom/quit", "custom/lock", "custom/reboot"]
  },
  "group/group-utils": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-utils",
      "transition-left-to-right": false
    },
    "modules": [
      "pulseaudio",
      "network",
      "bluetooth",
      "custom/wallpaper",
      "custom/nightlight",
      "backlight"
    ]
  }
}
