{
  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": "⼀",
      "2": "⼆",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "⼋",
      "9": "⼏",
      "10": "⼗"
    }
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>",
    "rotate": 90
  },
  "sway/window": {
    "format": "{app_id}"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": " ",
      "deactivated": " "
    }
  },
  "tray": {
    "icon-size": 14,
    "spacing": 5
  },
  "clock": {
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    },
    "format": "{:%I:%M}",
    "format-alt": "   {:%d/%m/%Y  %H:%M:%S}",
    "timezones": [
      "Kolkata"
    ],
    "max-length": 200,
    "interval": 1
  },
  "clock#hour": {
    "format": "{:%I}",
    "interval": 1
  },
  "clock#min": {
    "format": "{:%M}",
    "interval": 1
  },
  "cpu": {
    "format": "  {usage: >3}%",
    "on-click": "alacritty -e htop"
  },
  "custom/uptime": {
    "format": "  {}",
    "exec": "uptimex",
    "interval": 120
  },
  "memory": {
    "format": "  {: >3}%",
    "on-click": "alacritty -e htop"
  },
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
    "critical-threshold": 80,
    "format-critical": "{temperatureC}°C ",
    "format": "  {temperatureC}°C"
  },
  "backlight": {
    "format": "{icon} {percent: >3}",
    "format-icons": [
      "",
      ""
    ],
    "on-scroll-up": "brightness up",
    "on-scroll-down": "brightness down"
  },
  "battery": {
    "states": {
      "good": 90,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity: >3}",
    "_format-good": "",
    "_format-full": "",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ]
  },
  "network": {
    "_interface": "wlp2s0",
    "format": "⚠  Disabled",
    "format-wifi": " ",
    "_format-wifi": "   {essid}",
    "_format-ethernet": " {ifname}: {ipaddr}/{cidr}",
    "format-ethernet": "  Wired",
    "format-disconnected": "⚠  Disconnected",
    "on-click": "nm-connection-editor"
  },
  "pulseaudio": {
    "scroll-step": 1,
    "format": "{icon}  {volume: >3}",
    "format-bluetooth": "{icon}  {volume: >3}",
    "format-muted": " muted",
    "format-icons": {
      "headphones": "",
      "handsfree": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "",
        ""
      ]
    },
    "on-click": "pavucontrol",
    "on-scroll-up": "volume up",
    "on-scroll-down": "volume down"
  },
  "custom/pacman": {
    "format": "  {}",
    "interval": 7200,
    "exec": "i=$(checkupdates); echo \"$i\" |wc -l; echo \"$i\" |column -t |tr '\n' '\r'",
    "exec-if": "exit 0",
    "on-click": "alacritty -e sudo pacman -Syu",
    "signal": 8
  },
  "custom/power": {
    "format": "  ",
    "tooltip": false,
    "on-click": "~/.config/rofi/applets/bin/powermenu.sh"
  },
  "custom/keyboard-layout": {
    "exec": "swaymsg -t get_inputs | grep -m1 'xkb_active_layout_name' | cut -d '\"' -f4",
    "interval": 1,
    "format": "    {}",
    "signal": 1,
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/keyhint.sh"
  },
  "custom/launcher": {
    "format": " ",
    "on-click": "swaync-client -t -sw",
    "tooltip": false
  },
  "custom/wallpaper": {
    "format": "",
    "on-click": "setwal -path $mystorage/wallpaper ",
    "tooltip": false
  }
}
