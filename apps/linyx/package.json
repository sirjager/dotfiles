{
  "name": "linyx",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
		"start": "expo start",
		"dev": "expo start --dev-client -c",
		"prebuild": "expo prebuild --clean",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"web": "expo start --web",
		"test": "jest --watchAll",
		"lint": "expo lint",
		"format": "prettier --write . && prettier --check .",
		"build:apk": "eas build --profile preview -p android",
		"schema": "kysely-codegen --dialect sqlite --url tmp/sqlite.db --singularize --type-only-imports --out-file ./src/db/schema/types.ts --exclude-pattern 'schema_migrations'",
		"migrate": "kysely migrate:latest && npm run schema",
		"migrate:new": "bash -c 'if [ -z \"$1\" ]; then echo \"Error: Migration title required. Example migrate:new users_table\" >&2; exit 1; fi; touch ./src/db/migrations/$(date +\"%Y%m%d%H%M%S\")_${1}.ts' dummy",
		"db:up": "migrate -source file://src/db/migrations -database $POSTGRES_URI -verbose up",
		"db:down": "migrate -source file://src/db/migrations -database $POSTGRES_URI -verbose down -all",
		"db:drop": "migrate -source file://src/db/migrations -database $POSTGRES_URI -verbose drop -f"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "expo": "~54.0.25",
    "expo-constants": "~18.0.10",
    "expo-font": "~14.0.9",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.10",
    "expo-linking": "~8.0.9",
    "expo-router": "~6.0.15",
    "expo-splash-screen": "~31.0.11",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.8",
    "expo-web-browser": "~15.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-worklets": "0.5.1",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.0"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "typescript": "~5.9.2",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0"
  },
  "private": true
}
