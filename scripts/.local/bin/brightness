#!/usr/bin/env bash

msgId="98989"
arg=$1


if ! command -v light &>/dev/null; then
	dunstify -u critical -a "Brightness" -r "$msgId" "Light not found" "sudo pacman --needed -S light"
	exit 1
fi


get_brightness() {
  echo "$(light -G)"
}

get_icon() {
  if [[ "$1" == "up" ]]; then
		icon="$XDG_DATA_HOME/icons/McMojave-circle/status/16/gpm-brightness-lcd.svg"
  else
		icon="$XDG_DATA_HOME/icons/McMojave-circle/status/16/gpm-brightness-lcd.svg"
  fi
  echo $icon
}

send_notification() {
  dunstify -i "$1" -a "Brightness" -r "$msgId" -h int:value:"$(get_brightness)" "$(get_brightness)"
}

case $arg in
up)
  light -A 5
  ;;
down)
  light -U 5
  ;;
*)
  echo "Usage: brightness [up|down]"
  exit 0
  ;;
esac

send_notification "$(get_icon "$arg")"
