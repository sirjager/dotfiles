@theme "~/.cache/wal/colors-rofi-dark.rasi"

* {
    font:                        "JetbrainsMono Nerd Font 13";
    spacing:                     2;
    screen-margin:               4px 4px;
    box-spacing:                 0px;
    list-padding:                8px;
    element-padding:             15px;
    element-radius:              8px;
    element-spacing:             15px;
    background-color:            transparent;
}

window {
    location:                    south;
    anchor:                      north;
    fullscreen:                  false;
    width:                       99%;
    height:                      25%;
    x-offset:                    0px;
    y-offset:                    -10px;
    background-color:            @normal-background;
    border-radius:               12px;
    border:                      2px solid;
    border-color:                @border-color;
    padding: 0px;
}

element {
    padding: 6px 0px 6px 0px;
    spacing: 5px;
    border:  0;
    cursor:  pointer;
}

element normal.normal {
    text-color:            @normal-foreground;
    background-color:      transparent;
}

element selected.normal {
    text-color:           @active-foreground;
    background-color:     @active-background;
    border-radius:        12px;
}

element alternate.normal {
    text-color:           @alternate-active-foreground;
    background-color:     transparent;
}

element-text {
    background-color: transparent;
    text-color: inherit;
    cursor: inherit;
    highlight: inherit;
}
element-text selected {
    text-color: @normal-background;
}


element-icon {
    background-color: transparent;
    text-color: inherit;
    cursor: inherit;
}


mainbox {
    padding: 0;
    border: 0;
    background-color: transparent;
}

message {
    margin: 0px 7px;
}

textbox {
    text-color: @normal-foreground;
    padding: 10px;
    background-color: transparent;
}

prompt {
    text-color: @normal-foreground;
    margin: 0px 10px 0px 0px;
}

entry {
    text-color: @active-background;
}


listview {
    margin:           0px 0px 5px 0px;
    padding:          8px;
    scrollbar:        true;
    spacing:          2px;
    fixed-height:     0;
}

scrollbar {
    padding:        0;
    handle-width:   15px;
    border:         0;
    handle-color:         @selected-active-background;
    background-color:     @normal-background;
}

inputbar {
    spacing:                     0px;
    margin:                      0px;
    padding:                     12px;
    border:                      0px solid;
    text-color:                  @normal-foreground;
}

